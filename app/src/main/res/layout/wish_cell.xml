<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="130dp"
                                    app:cardCornerRadius="16dp"
                                    android:layout_height="200dp">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:src="@drawable/image_not_found" android:layout_marginTop="20dp" android:layout_width="110dp" android:layout_height="130dp" android:id="@+id/image"/>\
        <TextView android:textAlignment="center" android:id="@+id/title" android:layout_marginTop="20dp"
                  android:textStyle="bold"
                  android:textColor="#000"
                  android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v7.widget.CardView>