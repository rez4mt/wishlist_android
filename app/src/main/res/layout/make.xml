<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:src="@drawable/image_not_found"
                android:maxHeight="200dp"
               android:layout_marginTop="30dp"
               android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="100dp"
    android:id="@+id/image"
    />
    <EditText
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:background="@drawable/whitefill"
            android:hint="Title" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/whitefill"
            android:hint="Shop URL" android:id="@+id/extra" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="end"
            android:textColor="#fff"
            android:background="@drawable/redfillbtn"
            android:text="submit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/submit"/>
</LinearLayout>